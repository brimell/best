{
  "name": "inventory-marketplace-backend",
  "version": "1.0.0",
  "description": "Backend for an inventory system and marketplace (using Node, Express, TypeScript, and PostgreSQL)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "migrate": "ts-node src/db/run-migrations.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.15.4",
    "dotenv": "^16.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
